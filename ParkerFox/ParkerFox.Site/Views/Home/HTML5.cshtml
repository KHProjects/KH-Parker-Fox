    ViewBag.Title = "HTML5";
}

<!-- https://developer.mozilla.org/en/WebGL/Getting_started_with_WebGL-->
<script type="text/javascript" src="/Scripts/web-gl.js"></script>
<script type="text/javascript" src="/Scripts/gl-utils.js"></script>
<script type="text/javascript">
    $(function() {
        start("display");
    });
</script>
<canvas id="display" width="640" height="480">
    Your browser doesn't appear to support HTML5
</canvas>

<script id="shader-fs" type="x-shader/x-fragment">
    void main(void) {
        gl_FragColor = vec4(1.0, 1.0, 1.0, 1.0);
    }
</script>
    
<script id="shader-vs" type="x-shader/x-vertex">
    attribute vec3 aVertexPosition;
    
    uniform mat4 uMVMatrix;
    uniform mat4 uPMatrix;
    
    void main(void) {
        gl_Position = uPMatrix * uMVMatrix * vec4(aVertexPosition, 1.0);
    }
</script>