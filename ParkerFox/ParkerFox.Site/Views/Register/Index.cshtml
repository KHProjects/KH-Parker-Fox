@model ParkerFox.Site.ViewModels.Ecommerce.RegisterViewModel
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/knockout-2.1.0.js"></script>
@using(Html.BeginForm())
{
<dl>
    <dt>@Html.LabelFor(x=>x.Email)</dt>
    <dd>@Html.TextBoxFor(x=>x.Email,new{data_bind="value:FirstName"})</dd>
    <dt>@Html.LabelFor(x=>x.Password)</dt>
    <dd>@Html.PasswordFor(x=>x.Password)</dd>
    <dt>@Html.LabelFor(x=>x.ConfirmPassword)</dt>
    <dd>@Html.PasswordFor(x=>x.ConfirmPassword)</dd>
    <dt></dt>
    <dd>@Html.CheckBox("acceptsTerms", new{data_bind="click:acceptTerms"})</dd>
    <dd class="full">
        <input type="submit" value="register"/>
        <input type="button" value="click me" data-bind="enable:isValid()"/>
    </dd>
</dl>
}

