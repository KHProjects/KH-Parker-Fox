@model ParkerFox.Site.ViewModels.Magazine.Subscribe
@{
    ViewBag.Title = "Subscription";
}

@Html.Action("UserProfile")

@using(Html.BeginForm())
{
<dl>
    <dt class="mydl">@Html.LabelFor(x => x.Email)</dt>
    <dd>@Html.TextBoxFor(x => x.Email)</dd>
    <dt></dt>
    <dd class="command">
        <input type="submit" value="Subscribe" />
    </dd>
</dl>
}
<iframe src="/publication/childframe">
</iframe>

<script type="text/javascript">

    $(function() {
        $(window).on("message", function (e) {
            var event = e.originalEvent;
            alert(event.origin + " : " + event.data);
            event.source.postMessage("right back at ya", event.origin);
        });
    });

</script>